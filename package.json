{
  "name": "color-color-app",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf public/*.{js,css,map}",
    "build:assets": "rollup -c",
    "watch:assets": "rollup -c -w",
    "dev": "run-s clean watch:*",
    "build": "run-s clean build:*",
    "start": "sirv public --host",
    "release:sentry": "./release-on-sentry.sh",
    "release": "run-s build release:*"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com:saneef/color-color.git"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/runtime": "^7.11.2",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@sentry/cli": "^1.55.1",
    "autoprefixer": "^9.8.6",
    "eslint": "^7.7.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "postcss-load-config": "^2.1.0",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.24.1",
    "svelte-preprocess": "^4.0.12",
    "tailwindcss": "^1.6.2"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@sentry/browser": "^5.21.1",
    "change-case": "^4.1.1",
    "chroma-js": "^2.1.0",
    "core-js": "^3.6.5",
    "cssnano": "^4.1.10",
    "d3-scale": "^3.2.1",
    "d3-shape": "^1.3.7",
    "hsluv": "^0.1.0",
    "jsoun": "^0.1.4",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.1",
    "sirv-cli": "^1.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte,css,md}": "prettier --write",
    "*.{js,svelte}": "eslint --cache --fix"
  }
}
